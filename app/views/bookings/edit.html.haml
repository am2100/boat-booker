-# views/booking/edit.html.haml

%h1= boat_booker_date(Time.now)

= form_for @booking do |f|
  = f.label :book_from, 'From'
  = time_select(:booking, :book_from, { minute_step: 15, prompt: true })
  = f.label :book_to, 'To'
  = time_select(:booking, :book_to, { minute_step: 15, prompt: true })
  = submit_tag 'Book it!'